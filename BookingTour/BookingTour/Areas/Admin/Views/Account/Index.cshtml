@model List<Presentation.Areas.Admin.Models.AccountViewModel>
@{
    ViewData["Title"] = "Danh sách User";
}

<div class="page-header">
    <h3 class="fw-bold mb-3">Danh sách đặt Tour</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home">
            <a asp-area="Admin"
               asp-controller="Home"
               asp-action="Index">
                <i class="icon-home"></i>
            </a>
        </li>
    </ul>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Danh sách Filters</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="multi-filter-select"
                           class="display table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>UserName</th>
                                <th>Password</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Roles</th>
                                <th>isActive</th>
                            </tr>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>UserName</th>
                                <th>Password</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Roles</th>
                                <th>isActive</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var acc in Model)
                            {
                                <tr>
                                    <td>@acc.Id</td>
                                    <td>@acc.Username</td>
                                    <td>@acc.Password</td>
                                    <td>@acc.Email</td>
                                    <td>@acc.Phone</td>
                                    <th> @foreach (var role in @acc.Roles)
                                        {
                                            @role<br />
                                        }
                                    </th>
                                    <td>@acc.isActive</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Danh sách chi tiết</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="add-row"
                           class="display table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>UserName</th>
                                <th>Password</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Roles</th>
                                <th>isActive</th>
                                <th style="width: 10%">Action</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>UserName</th>
                                <th>Password</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Roles</th>
                                <th>isActive</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var acc in Model)
                            {
                                <tr>
                                    <td>@acc.Id</td>
                                    <td>@acc.Username</td>
                                    <td>@acc.Password</td>
                                    <td>@acc.Email</td>
                                    <td>@acc.Phone</td>
                                    <td>
                                        @foreach (var role in @acc.Roles)
                                        {
                                            @role <br />
                                        }
                                    </td>
                                    <td>@acc.isActive</td>
                                    <td>
                                        <div class="form-button-action">
                                            <a class="btn btn-link btn-primary" type="button"
                                            asp-area=""
                                               asp-route-userId=@acc.Id
                                               asp-controller="Account"
                                               asp-action="ChangePassword">
                                                <i class="fa fa-edit"></i>
                                            </a>

                                            <a class="btn btn-link btn-warning" type="button"
                                               asp-area="Admin"
                                               asp-route-userId=@acc.Id
                                               asp-controller="Role"
                                               asp-action="ChangeRole">
                                                <i class="fas fa-award"></i>
                                            </a>

                                            <a class="btn btn-link @((acc.isActive) ? "btn-success" : "btn-warning")"
                                               type="button"
                                               asp-area="Admin"
                                               asp-route-userId="@acc.Id"
                                               asp-controller="Account"
                                               asp-action="BlockUser">
                                                @if (acc.isActive)
                                                {
                                                    <i class="fas fa-check-circle"></i>
                                                    
                                                                            }
                                                else
                                                {
                                                    <i class="fas fa-ban"></i>
                                                    
                                                                            }
                                            </a>
                                        </div>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



