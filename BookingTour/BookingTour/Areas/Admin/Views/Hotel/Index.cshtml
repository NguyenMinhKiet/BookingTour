@model List<Application.DTOs.HotelDto.HotelDto>
@{
    ViewData["Title"] = "Danh sách khách sạn";
}

<div class="page-header">
    <h3 class="fw-bold mb-3">Danh sách khách sạn</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home">
            <a asp-area="Admin"
               asp-controller="Home"
               asp-action="Index">
                <i class="icon-home"></i>
            </a>
        </li>
    </ul>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Danh sách Filters</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="multi-filter-select"
                           class="display table table-striped table-hover">
                        <thead>
                            <tr>
                                <th class="w-10">STT</th>
                                <th class="w-40">Hotel Name</th>
                                <th class="w-10">Star Number</th>
                                <th class="w-40">Address</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>STT</th>
                                <th>Hotel Name</th>
                                <th>Star Number</th>
                                <th>Address</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @for(int i = 0 ;i< Model.Count; i++)
                            {
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@Model[i].Name</td>
                                    <td>@Model[i].Star</td>
                                    <td>@Model[i].Address</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <h4 class="card-title">Thông tin chi tiết</h4>
                    <a class="btn btn-primary btn-round ms-auto"
                       asp-area="Admin"
                       asp-action="Create"
                       asp-controller="Hotel">
                        <i class="fa fa-plus"></i>
                        Thêm khách sạn
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="add-row"
                           class="display table table-striped table-hover">
                        <thead>
                            <tr>
                                <th class="w-10">STT</th>
                                <th class="w-40">Hotel Name</th>
                                <th class="w-10">Star Number</th>
                                <th class="w-30">Address</th>
                                <th style="w-10">Action</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>STT</th>
                                <th>Hotel Name</th>
                                <th>Start Number</th>
                                <th>Address</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@Model[i].Name</td>
                                    <td>@Model[i].Star</td>
                                    <td>@Model[i].Address</td>
                                    <td>
                                        <div class="form-button-action">
                                            <a class="btn btn-link btn-primary" type="button"
                                               asp-area="Admin"
                                               asp-route-HotelID=@Model[i].HotelID
                                               asp-controller="Hotel"
                                               asp-action="Update">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a class="btn btn-link btn-danger " type="button"
                                               asp-area="Admin"
                                               asp-route-HotelID=@Model[i].HotelID
                                               asp-controller="Hotel"
                                               asp-action="Delete">
                                                <i class="fa fa-times"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

