@model List<Presentation.Areas.Admin.Models.TourViewModel>
@{
    ViewData["Title"] = "Danh sách Tour";
}
<div class="page-header">
    <h3 class="fw-bold mb-3">Danh sách Tour</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home">
            <a asp-area="Admin"
               asp-controller="Home"
               asp-action="Index">
                <i class="icon-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="icon-arrow-right"></i>
        </li>
        <li class="nav-item">
            Danh sách
        </li>
    </ul>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Danh sách Filters</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="multi-filter-select"
                           class="display table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Price</th>
                                <th>AvaiableSeats</th>
                                <th>Category</th>
                                <th>City</th>
                            </tr>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Price</th>
                                <th>AvaiableSeats</th>
                                <th>Category</th>
                                <th>City</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var t in Model)
                            {
                                <tr>
                                    <td>@t.TourID</td>
                                    <td>@t.Title</td>
                                    <td>@t.Description</td>
                                    <td>@t.StartDate</td>
                                    <td>@t.EndDate</td>
                                    <td>@t.Price</td>
                                    <td>@t.AvailableSeats</td>
                                    <td>@t.Category</td>
                                    <td>@t.City</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <h4 class="card-title">Thông tin chi tiết</h4>
                    <a class="btn btn-primary btn-round ms-auto"
                       asp-area="Admin"
                       asp-action="Create"
                       asp-controller="Tour">
                        <i class="fa fa-plus"></i>
                        Thêm Tour
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="add-row"
                           class="display table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Price</th>
                                <th>AvaiableSeats</th>
                                <th>Category</th>
                                <th>City</th>
                                <th style="width: 10%">Action</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Price</th>
                                <th>AvaiableSeats</th>
                                <th>Category</th>
                                <th>City</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var t in Model)
                            {
                                <tr>
                                    <td>@t.Title</td>
                                    <td>@t.Description</td>
                                    <td>@t.StartDate</td>
                                    <td>@t.EndDate</td>
                                    <td>@t.Price</td>
                                    <td>@t.AvailableSeats</td>
                                    <td>@t.Category</td>
                                    <td>@t.City</td>
                                    <td>
                                        <div class="form-button-action">

                                            <a class="btn btn-link btn-primary " type="button"
                                               asp-area="Admin"
                                               asp-route-TourID=@t.TourID
                                               asp-controller="TourEmployee"
                                               asp-action="Index">
                                                <i class="fa fa-user"></i>
                                            </a>

                                            <a class="btn btn-link btn-danger " type="button"
                                               asp-area="Admin"
                                               asp-route-TourID=@t.TourID
                                               asp-controller="TourDestination"
                                               asp-action="Index">
                                                <i class="fas fa-map-marker-alt"></i>
                                            </a>

                                            <a class="btn btn-link btn-primary" type="button"
                                            asp-area="Admin"
                                               asp-route-TourID=@t.TourID
                                               asp-controller="Tour"
                                               asp-action="Update">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a class="btn btn-link btn-danger " type="button"
                                               asp-area="Admin"
                                               asp-route-TourID=@t.TourID
                                               asp-controller="Tour"
                                               asp-action="Delete">
                                                <i class="fa fa-times"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

