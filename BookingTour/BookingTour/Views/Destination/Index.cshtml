@model List<Presentation.Models.DestinationViewModel>
@{
    ViewData["Title"] = "Danh sách địa điểm";
}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>City</th>
            <th>Country</th>
            <th>Description</th>
            <th>Category</th>
            <th>Controls</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var destination in Model)
        {
            <tr>
                <td>@destination.DestinationID</td>
                <td>@destination.Name</td>
                <td>@destination.City</td>
                <td>@destination.Country</td>
                <td>@destination.Description</td>
                <td>@destination.Category</td>
                <td>
                    <div class="w-100 btn-group" role="group">
                        <a asp-action="Update"
                           asp-controller="Destination"
                           asp-route-DestinationID="@destination.DestinationID"
                           class="btn btn-primary">Cập nhật thông tin
                       </a>

                        <a asp-action="Delete"
                           asp-controller="Destination"
                           asp-route-DestinationID="@destination.DestinationID"
                           class="btn btn-danger">Xóa
                       </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-success" asp-action="Create">Thêm địa điểm Mới</a>
