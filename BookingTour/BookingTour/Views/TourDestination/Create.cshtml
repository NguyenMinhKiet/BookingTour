@model Presentation.Models.TourDestinationViewModel
@{
    ViewData["Title"] = "Thêm địa điểm vào tour";
}

<h2>Thêm địa điểm vào tour</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label for="TourID">Chọn Tour:</label>
        <select id="TourID" name="TourID" class="form-control" Required>
            <option value="">-- Chọn Tour --</option>
            @foreach (var tour in ViewBag.TourList as SelectList)
            {
                <option value="@tour.Value">@tour.Text</option>
            }
        </select>
        <span asp-validation-for="TourID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="DestinationID">Chọn địa điểm:</label>
        <select id="DestinationID" name="DestinationID" class="form-control" Required>
            <option value="">-- Chọn địa điểm --</option>
            @foreach (var d in ViewBag.DestinationList as SelectList)
            {
                <option value="@d.Value">@d.Text</option>
            }
        </select>
        <span asp-validation-for="DestinationID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VisitDate"></label>
        <input asp-for="VisitDate" type="datetime-local" class="form-control" id="VisitDate" name="VisitDate" Required>
        <span asp-validation-for="VisitDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-controller="TourDestination" asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
