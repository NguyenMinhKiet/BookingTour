@model Presentation.Models.TourDestinationViewModel
@{
    ViewData["Title"] = "Chỉnh sửa thông tin thời gian địa điểm tour";
}

<h2>Chỉnh sửa thông tin thời gian địa điểm tour</h2>

<form asp-action="Update" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="TourID" type="text" class="form-control" id="TourID" name="TourID" value="@Model.TourID">
    <input asp-for="DestinationID" type="text" class="form-control" id="DestinationID" name="DestinationID" value="@Model.DestinationID">

    <div class="form-group">
        <label asp-for="VisitDate"></label>
        <input asp-for="VisitDate" type="datetime-local" class="form-control" id="VisitDate" name="VisitDate" Required>
        <span asp-validation-for="VisitDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-controller="TourDestination" asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
