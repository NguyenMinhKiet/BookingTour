@model Presentation.Models.PaymentViewModel

@{
    ViewData["Title"] = "Chỉnh sửa thông tin thanh toán";
}

<h2>Chỉnh sửa thông tin thanh toán</h2>

<form asp-action="Update" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group d-none">
        <label asp-for="PaymentID"></label>
        <input asp-for="PaymentID" type="text" class="form-control" id="PaymentID" name="PaymentID">
        <span asp-validation-for="PaymentID" class="text-danger"></span>
    </div>

    <div class="form-group d-none">
        <label asp-for="BookingID"></label>
        <input asp-for="BookingID" type="text" class="form-control" id="BookingID" name="BookingID" Required>
        <span asp-validation-for="BookingID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Method"></label>
        <select asp-for="Method" type="text" class="form-select" id="Method" name="Method" Required>
            <option value="">-- Chọn phương thức thanh toán --</option>
            <option value="0">Thẻ ví</option>
            <option value="1">Tiền mặt</option>
        </select>

        <span asp-validation-for="Method" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status"></label>
        <input asp-for="Status" type="text" class="form-control" id="Status" name="Status" Required>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-controller="Payment" asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
