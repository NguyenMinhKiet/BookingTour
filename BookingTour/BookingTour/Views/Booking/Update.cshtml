@model Presentation.Models.BookingViewModel
@{
    ViewData["Title"] = "Chỉnh sửa thông tin booking";
}

<h2>Chỉnh sửa thông tin booking</h2>

<form asp-action="Update" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input asp-for="CustomerID" type="hidden" class="form-control" id="CustomerID" name="CustomerID" value="@Model.CustomerID">
    <input asp-for="TourID" type="hidden" class="form-control" id="TourID" name="TourID" value="@Model.TourID">

    <div class="form-group">
        <label asp-for="Adult"></label>
        <input asp-for="Adult" type="number" class="form-control" id="Adult" name="Adult" min="0" Required>
        <span asp-validation-for="Adult" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Child"></label>
        <input asp-for="Child" type="number" class="form-control" id="Child" name="Child" min="0" Required>
        <span asp-validation-for="Child" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-controller="Booking" asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
