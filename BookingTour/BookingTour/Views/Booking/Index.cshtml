@model List<Presentation.Models.BookingViewModel>
@{
    ViewData["Title"] = "Danh sách booking";
}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tour ID</th>
            <th>Customer ID</th>
            <th>CreateAt</th>
            <th>ModifyAt</th>
            <th>Adult</th>
            <th>Child</th>
            <th>TotalPrice</th>
            <th>Controls</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.BookingID</td>
                <td>@b.TourID</td>
                <td>@b.CustomerID</td>
                <td>@b.CreateAt</td>
                <td>@b.ModifyAt</td>
                <td>@b.Adult</td>
                <td>@b.Child</td>
                <td>@b.TotalPrice</td>
                <td>
                    <div class="w-100 btn-group" role="group">
                        <a asp-action="Update"
                           asp-controller="Booking"
                           asp-route-BookingID="@b.BookingID"
                           class="btn btn-primary">Cập nhật thông tin</a>

                        <a asp-action="Delete"
                           asp-controller="Booking"
                           asp-route-BookingID="@b.BookingID"
                           class="btn btn-danger">Xóa</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-success" asp-action="Create">Thêm booking Mới</a>
