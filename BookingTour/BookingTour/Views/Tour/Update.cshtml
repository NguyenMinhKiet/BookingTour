@model Presentation.Models.TourViewModel
@{
    ViewData["Title"] = "Chỉnh sửa thông tin tour";
}

<h2>Chỉnh sửa thông tin tour</h2>

<form asp-action="Update" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="TourID" type="hidden" class="form-control" id="TourID" name="TourID" value="@Model.TourID">

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" type="text" class="form-control" id="Title" name="Title" Required>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" type="datetime-local" class="form-control" id="Description" name="Description" Required>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="datetime-local" class="form-control" id="StartDate" name="StartDate" Required>
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="datetime-local" class="form-control" id="EndDate" name="EndDate" Required>
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="decimal" class="form-control" id="Price" name="Price" min="0" value="0" Required>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AvailableSeats"></label>
        <input asp-for="AvailableSeats" type="number" class="form-control" id="AvailableSeats" name="AvailableSeats" min="0" value="0" Required>
        <span asp-validation-for="AvailableSeats" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-controller="Tour" asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
