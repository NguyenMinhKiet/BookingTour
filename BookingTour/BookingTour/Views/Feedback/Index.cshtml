@model List<Presentation.Models.FeedbackViewModel>
@{
    ViewData["Title"] = "Danh sách địa điểm";
}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tour ID</th>
            <th>Customer ID</th>
            <th>Rating</th>
            <th>Comments</th>
            <th>CreateAt</th>
            <th>ModifyAt</th>
            <th>Controls</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var feedback in Model)
        {
            <tr>
                <td>@feedback.FeedbackID</td>
                <td>@feedback.TourID</td>
                <td>@feedback.CustomerID</td>
                <td>@feedback.Rating</td>
                <td>@feedback.Comments</td>
                <td>@feedback.CreateAt</td>
                <td>@feedback.ModifyAt</td>
                <td>
                    <div class="w-100 btn-group" role="group">
                        <a asp-action="Update"
                           asp-controller="Feedback"
                           asp-route-FeedbackID="@feedback.FeedbackID"
                           class="btn btn-primary">
                            Cập nhật thông tin
                        </a>

                        <a asp-action="Delete"
                           asp-controller="feedback"
                           asp-route-FeedbackID="@feedback.FeedbackID"
                           class="btn btn-danger">
                            Xóa
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-success" asp-action="Create">Thêm địa điểm Mới</a>
