@model List<Presentation.Models.EmployeeViewModel>
@{
    ViewData["Title"] = "Danh sách nhân viên";
}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>AccountID</th>
            <th>Phone</th>
            <th>Position</th>
            <th>Address</th>
            <th>Controls</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeID</td>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Email</td>
                <td>@employee.AccountID</td>
                <td>@employee.Phone</td>
                <td>@employee.Position</td>
                <td>@employee.Address</td>
                <td>
                    <div class="w-100 btn-group" role="group">
                        <a asp-action="Update"
                           asp-controller="Employee"
                           asp-route-employee_id="@employee.EmployeeID"
                           class="btn btn-primary">Cập nhật thông tin</a>

                        <a asp-action="Delete"
                           asp-controller="Employee"
                           asp-route-employee_id="@employee.EmployeeID"
                           class="btn btn-danger">Xóa</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-success" asp-action="Create">Thêm Nhân Viên Mới</a>
