@model List<Presentation.Models.CustomerViewModel>
@{
    ViewData["Title"] = "Danh sách khách hàng";
}
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>AccountID</th>
            <th>UserName</th>
            <th>Password</th>
            <th>IsActive</th>
            <th>Controls</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerID</td>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>@customer.Phone</td>
                <td>@customer.Address</td>
                <td>@customer.AccountID</td>
                <td>@customer.Username</td>
                <td>@customer.Password</td>
                <td>@customer.isActive</td>
                <td>
                    <div class="w-100 btn-group" role="group">
                        <a asp-action="Update"
                           asp-controller="Customer"
                           asp-route-CustomerID="@customer.CustomerID"
                           asp-route-AccountID="@customer.AccountID"
                           class="btn btn-primary">Cập nhật thông tin</a>

                        <a asp-action="Delete"
                           asp-controller="Customer"
                           asp-route-CustomerID="@customer.CustomerID"
                           class="btn btn-danger">Xóa</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-success" asp-action="Create">Thêm khách hàng Mới</a>
